{
    "name": "lexertl-ts",
    "version": "1.0.0",
    "description": "Typescript wrapper around c++ lexical analysis library 'lexertl'",
    "main": "build/index.js",
    "scripts": {
        "bootstrap": "   npm-run-all --parallel install:conan install:vendors",
        "build": "       npm-run-all --parallel build:ts build:wasm",
        "rebuild": "     npm-run-all clean      build",
        "rebuild:wasm": "npm-run-all clean:wasm build:wasm",
        "rebuild:ts":   "npm-run-all clean:ts   build:ts",

        "install:conan": "  conan install . --install-folder conan",
        "install:vendors": "sh scripts/install-vendors.sh",

        "build:ts": "  tsc",
        "build:wasm": "premake5 gmake2 && emmake make",

        "clean:wasm": "(rimraf build/wasm)",
        "clean:ts":   "(rimraf build/ts)",
        "clean": "     (rimraf build)",

        "test": "jest",
        "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
        "memcheck": "valgrind --log-file=logs/memcheck.txt --error-limit=no --leak-check=yes --suppressions=valgrind.supp --read-inline-info=yes node -r ts-node/register node_modules/.bin/jest --runInBand",
        "start": "node build/index.js"
    },
    "keywords": [
        "c++",
        "cxx",
        "cpp",
        "lexertl",
        "lexer",
        "tokens",
        "emscripten",
        "premake",
        "premake5",
        "wasm",
        "web-assembly",
        "assembly"
    ],
    "author": "Veetaha",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "aws-sdk": "^2.514.0",
        "jest": "^24.9.0",
        "node-gyp": "^5.0.3",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "@types/node": "^12.7.2",
        "node-addon-api": "^1.7.1",
        "node-pre-gyp": "^0.13.0",
        "tslib": "^1.10.0"
    }
}
